<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cr.ac.utn.appmovil.rooms">

    <!-- Permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Restapi">

        <!-- Actividad de Validación -->
        <activity
            android:name=".ValidateAuthActivity"
            android:exported="false" />

        <!-- Actividad de Búsqueda -->
        <activity
            android:name=".searchDogs"
            android:exported="false" />

        <!-- Actividad Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de Login -->
        <activity
            android:name=".emma_LoginActivity"
            android:exported="true" />

        <!-- Actividad de Gestión de Salas -->
        <activity
            android:name=".emma_RoomActivity"
            android:exported="false" />

    </application>
</manifest>
