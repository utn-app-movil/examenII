<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="jusRoomNameText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/jus_text_primary</item>
    </style>

    <style name="jusRoomCapacityText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/jus_text_secondary</item>
    </style>

    <style name="jusRoomStatusText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="jusCardStyle">
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="backgroundTint">@color/jus_card_background</item>
    </style>
</resources>
