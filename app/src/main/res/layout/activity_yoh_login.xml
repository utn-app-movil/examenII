<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".yoh_Login">

    <ImageView
        android:id="@+id/yoh_iv_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/yoh_string_app_name"
        android:src="@drawable/ic_app_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/yoh_et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/yoh_string_username"
        android:inputType="text"
        android:padding="50dp"
        app:layout_constraintTop_toBottomOf="@id/yoh_iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/yoh_et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/yoh_string_password"
        android:inputType="textPassword"
        android:padding="50dp"
        app:layout_constraintTop_toBottomOf="@id/yoh_et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <Button
        android:id="@+id/yoh_btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/yoh_string_btn_login"
        android:backgroundTint="@color/yoh_ORANGE_color"
        android:textColor="?android:attr/textColorLink"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/yoh_et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
